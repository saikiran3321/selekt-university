{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "react",
  ],
  "extends": "airbnb",
  "parserOptions": { "ecmaVersion": 2015, "ecmaFeatures": { "legacyDecorators": true } },
  "rules": {
    /* style */
    "property-sort-order": 0,
    "brace-style": [1, "stroustrup"],
    "semi": [1, "never"],
    "quotes": [1, "single"],
    "func-names": [0],
    "no-console": [0],
    "arrow-body-style": [1, "as-needed", { "requireReturnForObjectLiteral": false }],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "space-before-blocks": [0, "always"],
    "no-use-before-define": [2, { "functions": false, "classes": true }],
    "new-cap": 0,
    "max-len": [2, 120, { "ignoreTemplateLiterals": true  }],
    "camelcase": [0],
    "no-unused-vars": [2, { "args": "none" }],
    "arrow-parens": [0, "as-needed"],
    "no-plusplus": 0,
    "class-methods-use-this": 0,
    "no-tabs": 0,
    "linebreak-style": 0,
    "import/prefer-default-export": 0,
    "object-curly-newline":0,

    /* react */
    "jsx-quotes": [2, "prefer-double"],
    "react/display-name": 1,
    "react/forbid-prop-types": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-curly-spacing": 1,
    "react/jsx-indent-props": 1,
    "react/jsx-max-props-per-line": 0,
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-literals": 0,
    "react/jsx-no-undef": 0,
    "react/jsx-quotes": 0,
    "react/jsx-sort-props": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-danger": 0,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 0,
    "react/no-direct-mutation-state": 1,
    "react/no-multi-comp": 1,
    "react/no-set-state": 0,
    "react/no-unknown-property": 1,
    "react/prefer-es6-class": 0,
    "react/prefer-stateless-function": 0,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/require-extension": 0,
    "react/self-closing-comp": 1,
    "react/sort-comp": 1,
    "react/sort-prop-types": 1,
    "react/jsx-wrap-multilines": 1, // react/wrap-multilines rule is deprecated
    "react/jsx-filename-extension": 0,
    "react/no-unused-prop-types": 0,
    "react/jsx-no-target-blank": 0,
    "react/no-string-refs": 0,
    "react/no-find-dom-node": 0,
    "react/require-default-props": 'warn',
    "react/jsx-props-no-spreading":0,
    "react/jsx-closing-tag-location":0,
    "react/jsx-fragments":0,
    "import/no-cycle":0,
    "operator-linebreak":0,
    "prefer-destructuring":0,
    "no-restricted-globals":0,
    "lines-between-class-members":0,
    "react/static-property-placement":0,
    "react/jsx-one-expression-per-line":0,
    "react/destructuring-assignment":0,
    "react/jsx-curly-brace-presence":0,
    "react/jsx-curly-newline":0,
  
    /* jsx-a11y */
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/media-has-caption": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/label-has-associated-control": 0
  },
  "globals": {
    "React": false,
    "browser": false,
    "expect": false
  }
}
